/* pages/start/index.wxss */

.bg {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: -99999;
}
.start-image {
  height: 100%;
  width: 100%;
  z-index: -9999;
}
.container {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items:center;
  justify-content: center;
}

.start-title {
  writing-mode: vertical-lr;
  font-size: 60rpx;
  color: #fff;
  letter-spacing: 16px;
  opacity: 0;
}
